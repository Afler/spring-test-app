<!--    </bean>-->

    <bean id="musicListBean" class="group_id_test.MusicPlayer" scope="singleton">
        <property name="musicList">
            <list>
                <ref bean="alt_musicBean"/>
                <ref bean="classic_musicBean"/>
                <ref bean="rock_musicBean"/>
            </list>
        </property>
    </bean>

</beans>